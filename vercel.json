{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/cron",
      "dest": "/api/cron.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/cron?job=daily-digest",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron?job=draft-notifications", 
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron?job=intelligent-notifications",
      "schedule": "0 */6 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    },
    "api/cron.ts": {
      "maxDuration": 60
    }
  }
}